<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearence.TextInputLayout.Blue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:background">@color/colorBlack</item>
    </style>

    <style name="AppTheme.Button2">
        <item name="android:layout_height">@dimen/height_size_text_fields</item>
        <item name="android:layout_width">@dimen/width_size_text_fields</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_button2</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>



    <style name="horizontal_divider">


        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGray</item>

    </style>

    <style name="AppTheme.SubTitle">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:alpha">0.6</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>

    <style name="text_datasheet_1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="text_datasheet_2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="title_bar" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
    </style>


</resources>
